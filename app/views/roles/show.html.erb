
<div class="center">
  <%= render :partial => "shared/nav", :locals => {:roles => true} %>
</div>

<h2><%= t('.role_details') %></h2><br>

<% unless notice.nil? %>
  <div class="container center alert alert-success"  style="width:500px">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>



<table class="table table-striped table-bordered table-condensed">
<tr>
  <td align="right" style="width:200px"><b><%= t('.name') %></b></td>
  <td><%= @role.name %></td>
</tr>
<tr>
  <td align="right"><b><%= t('.description') %></b></td>
  <td><%= @role.description %></td>
</tr>
<tr>
  <td align="right"><b><%= t('.read') %></b></td>
  <td><% if @role.read == 1 %><%= t('.yes') %><% else %><%= t('.no') %><% end %></td>
</tr>
<tr>
  <td align="right"><b><%= t('.write') %></b></td>
  <td><% if @role.write == 1 %><%= t('.yes') %><% else %><%= t('.no') %><% end %></td>
</tr>
<tr>
  <td align="right"><b><%= t('.execute') %></b></td>
  <td><% if @role.execute == 1 %><%= t('.yes') %><% else %><%= t('.no') %><% end %></td>
</tr>
</table>

<%= link_to t('.edit_role'), edit_role_path(@role), :class=>'btn btn-primary btn-mini'  %>

<br><br>
<%= link_to t('.cancel'), roles_path %>

