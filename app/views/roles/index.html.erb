
<h3><%= image_tag( "roles.png", :border => 0, :valign => "middle" ) %> <%= t('.roles') %> <%= link_to image_tag('tooltip12x12.png', :border => 0, :align => "top"), nil, title: t('.roles_tooltip'), rel: 'popover' %></h3>

<% unless notice.nil? %>
  <div class="container center alert alert-success"  style="width:500px">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="container center alert alert-error"  style="width:500px">
    <p id="alert"><%= flash[:alert] %></p>
  </div>
<% end %>

<table class="table table-striped table-bordered table-condensed">
  <tr style="background-color: #44721e">
    <th style="background-color: #91b96f"><%= sortable t('.name') %></th>
    <th style="background-color: #91b96f"><%= sortable t('.description') %></th>
    <th style="text-align: center; width: 50px; background-color: #91b96f"><%= t('.read') %></th>
    <th style="text-align: center; width: 50px; background-color: #91b96f"><%= t('.write') %></th>
    <th style="text-align: center; width: 50px; background-color: #91b96f"><%= t('.execute') %></th>
    <th style="text-align: center; background-color: #91b96f" colspan=3><%= t('.actions') %></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= role.description %></td>
    <td style="text-align: center"><% if role.read == 1 %><%= t('.yes') %><% else %><%= t('.no') %><% end %></td>
    <td style="text-align: center"><% if role.write == 1 %><%= t('.yes') %><% else %><%= t('.no') %><% end %></td>
    <td style="text-align: center"><% if role.execute == 1 %><%= t('.yes') %><% else %><%= t('.no') %><% end %></td>    
    <td style="text-align: center;width:30px"><%= link_to t('.show'), role %></td>
    <td style="text-align: center;width:30px""><%= link_to t('.edit'), edit_role_path(role) %></td>
    <td style="text-align: center;width:30px""><%= link_to t('.destroy'), role, confirm: t('.confirm'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to t('.new_role'), new_role_path, :class => "btn btn-primary btn-mini" %>
