<!DOCTYPE html>
<html>

  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  
  <body>

    <%= render 'layouts/header' %>
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span2">
          <%= render :partial => "shared/nav_sidebar" %>
        </div>
        <% if (session[:user_role] != nil) %><div class="span9"><% else %><div class="span12"><% end %>
          <%= render_breadcrumbs :separator => ' > ' %>
          <%= yield %>
        </div>
      </div>
      
    </div>
    <%= render 'layouts/footer' %>
    
  </body>
  
<!--
