
<h2><%= t('.credential_details') %></h2><br>

<% unless notice.nil? %>
  <div class="container center alert alert-success"  style="width:500px">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<table class="table table-striped table-bordered table-condensed">
<tr>
  <td align="right" style="width:200px"><b><%= t('.depot_name') %></b></td>
  <td><%= get_DepotName(@credential.depot_id) %></td>
</tr>
<tr>
  <td align="right"><b><%= t('.user_name') %></b></td>
  <td><%= get_UserName(@credential.user_id) %></td>
</tr>
<tr>
  <td align="right"><b><%= t('.role_name') %></b></td>
  <td><%= get_RoleName(@credential.role_id) %></td>
</tr>
</table>

<%= link_to t('.edit_credential'), edit_credential_path(@credential), :class=>'btn btn-primary btn-mini'  %>

<br><br>
<%= link_to t('.cancel'), credentials_path %>

