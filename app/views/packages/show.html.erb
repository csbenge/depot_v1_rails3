
<h3><%= image_tag( "packages.png", :border => 0, :valign => "middle" ) %> <%= t('.packages') %> </h3>

<% unless notice.nil? %>
  <div class="container center alert alert-success"  style="width:500px">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="container center alert alert-error"  style="width:500px">
    <p id="alert"><%= flash[:alert] %></p>
  </div>
<% end %>

<table class="table table-striped table-bordered table-condensed">
<tr style="background-color: #44721e">
  <th style="background-color: #91b96f"><%= t('.package_name') %></b></td>
  <th style="background-color: #91b96f"><%= t('.package_desc') %></b></td>
  <th style="background-color: #91b96f; text-align: center;width:50px"><%= t('.package_type') %></b></td>
  <th style="background-color: #91b96f; text-align: center;width:50px"><%= t('.package_version') %></b></td>
  <th style="background-color: #91b96f; text-align: left;width:200px"><%= t('.package_url') %></b></td>
  <th style="background-color: #91b96f; text-align: center;width:50px"><%= t('.package_status') %></b></td>
</tr>
<tr>
  <td align="right"><b><%= @package.pkg_name %></td>
  <td><%= @package.pkg_desc %></td>
  <td style="text-align: center;width:50px"><%= raw get_PackageTypeText(@package.pkg_type) %></td>
  <td style="text-align: center;width:50px"><%= @package.pkg_version %></td>
  <td style="text-align: left;width:200px"><%= @package.pkg_url %></td>
  <td style="text-align: center"><%= raw get_PackageStatusText(@package.pkg_status) %></td>
</tr>
</table>

<h3><%= image_tag( "artifacts.png", :border => 0, :valign => "middle" ) %> <%= t('.artifacts') %> <%= link_to image_tag('tooltip12x12.png', :border => 0, :align => "top"), nil, title: t('.artifact_tooltip'), rel: 'tooltip' %></h3>
<table class="table table-striped table-bordered table-condensed">
<tr style="background-color: #44721e">
  <th style="background-color: #91b96f"><%= t('.artifact_name') %></b></td>
  <th style="background-color: #91b96f"><%= t('.artifact_desc') %></b></td>
  <th style="background-color: #91b96f; text-align: center;width:50px"><%= t('.artifact_type') %></b></td>
  <th style="background-color: #91b96f; text-align: center;width:50px"><%= t('.artifact_version') %></b></td>
  <th style="background-color: #91b96f; text-align: left;width:200px"><%= t('.artifact_url') %></b></td>
  <th style="text-align: center; background-color: #91b96f" colspan=3><%= t('.actions') %></th>
</tr>
<% @package.artifacts.each do |artifact| %>
<tr>
  <td><%= artifact.art_name %></td>
  <td><%= artifact.art_desc %></td>
  <td style="text-align: center;width:50px"><%= raw get_ArtifactTypeText(artifact.art_type) %></td>
  <td style="text-align: center;width:50px"><%= artifact.art_version %></td>
  <td style="text-align: left;width:50px"><%= artifact.art_url %></td>
  <td style="text-align: center;width:30px"><%= button_to t('.show'), [artifact.package, artifact], :method => "get", :class => "btn btn-mini" %></td>
  <td style="text-align: center;width:30px"><%= button_to t('.edit'), edit_artifact_path(artifact), :method => "get", :class => "btn btn-mini" %></td>
  <td style="text-align: center;width:30px"><%= button_to t('.destroy'), [artifact.package, artifact], confirm: t('.confirm'), method: :delete, :class => "btn btn-mini" %></td>

</tr>
<% end %>
</table>

<%= link_to t('.add_artifact'), new_package_artifact_path(@package), :class => "btn btn-primary btn-small" %>
<br>
<%= link_to t('.back'), :back %>

  
