
<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> <%= t('.error01') %></h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
  <tr>
    <td align="right" style="width:100px"><%= f.label t('.name') %></td>
    <td><%= f.text_field :name, :autofocus => true %></td>
  </tr>
  <tr><td><br></td></tr>
  <tr>
    <td align="right" style="width:100px"><%= f.label t('.firstname') %></td>
    <td><%= f.text_field :firstname %></td>
  </tr>
  <tr><td><br></td></tr>
  <tr>
    <td align="right" style="width:100px"><%= f.label t('.lastname') %></td>
    <td><%= f.text_field :lastname %></td>
  </tr>
  <tr><td><br></td></tr>
  <tr>
    <td align="right" ><%= f.label :password, t('.password') %></td>
    <td><%= f.password_field :password, :size => 40 %></td>
  </tr>
  <tr><td><br></td></tr>
  <tr>
    <td align="right" ><%= f.label :password_confirmation, t('.confirm') %></td>
    <td><%= f.password_field :password_confirmation, :size => 40 %></td>
  </tr>
  <tr><td><br></td></tr>
  <tr>
    <td align="right" ><%= f.label t('.email') %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr><td><br></td></tr>
  <tr>
    <td align="right" ><%= f.label t('.role') %></td>
    <td><%= collection_select :user, :role_id, Role.find(:all), :id, :name %></td>
  </tr>
  
  </table>
  
  <br>
  <button type="submit" class="btn btn-primary"><%= t('.submit') %></button>
  <br>
  <%= link_to t('.cancel'), users_path %>

<% end %>
