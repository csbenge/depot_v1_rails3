
<h3><%= image_tag( "users.png", :border => 0, :valign => "middle" ) %> <%= t('.users') %> <%= link_to image_tag('tooltip12x12.png', :border => 0, :align => "top"), nil, title: t('.users_tooltip'), rel: 'popover' %></h3>


<% unless notice.nil? %>
  <div class="container center alert alert-success"  style="width:500px">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="container center alert alert-error"  style="width:500px">
    <p id="alert"><%= flash[:alert] %></p>
  </div>
<% end %>

<table class="table table-striped table-bordered table-condensed">
  <tr style="background-color: #44721e">
    <th style="background-color: #91b96f"><%= sortable t('.user_id') %></th>
    <th style="background-color: #91b96f"><%= sortable t('.firstname') %></th>
    <th style="background-color: #91b96f"><%= sortable t('.lastname') %></th></th>

    <th style="background-color: #91b96f">Hashed password</th>
    <th style="background-color: #91b96f">Salt</th>

    <th style="background-color: #91b96f"><%= link_to t('.email'), :sort => "email" %></th>
    <th style="background-color: #91b96f"><%= link_to t('.role'), :sort => "role_id" %></th>
    <th style="text-align: center; background-color: #91b96f" colspan=3><%= t('.actions') %></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>

    <td><%= user.hashed_password %></td>
    <td><%= user.salt %></td>
    
    <td><%= user.email %></td>
    <td><%= get_RoleName(user.role_id) %></td>

    <td style="text-align: center;width:30px"><%= link_to t('.show'), user %></td>
    <td style="text-align: center;width:30px""><%= link_to t('.edit'), edit_user_path(user) %></td>
    <td style="text-align: center;width:30px""><%= link_to t('.destroy'), user, confirm: t('.confirm'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to t('.new_user'), new_user_path , :class => "btn btn-primary btn-mini" %>
